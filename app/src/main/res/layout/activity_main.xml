<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end">

        <EditText
            android:id="@+id/tuning_frequency"
            android:inputType="numberDecimal"
            android:minEms="3"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hz"/>

        <android.support.v7.widget.Space
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_music_note_black_24dp"
            android:id="@+id/button"
            android:onClick="showNotePicker"
            android:contentDescription="@string/description_music_note"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/analysis_view"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/power_spectrum"
            android:name="com.crcrch.chromatictuner.PowerSpectrumFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:graphDescription="@string/graph_description_power_spectrum"/>

        <fragment
            android:id="@+id/waveform"
            android:name="com.crcrch.chromatictuner.WaveformBeatsFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:graphDescription="Waveform"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toggleLiveSpectrum"
            android:text="Freeze/Unfreeze"/><!-- FIXME -->

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_spinner"
        style="?android:progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>